<Window x:Class="PopupStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopupStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Magasin" Click="Store"/>
                <MenuItem Header="Prix" Click="Price"/>
                <MenuItem Header="Produits" Click="Product"/>
                <MenuItem Header="Créer une vente" Click="CreateSell"/>
                <MenuItem Header="Résumé des ventes" Click="Sell"/>
            </Menu>
            <Frame x:Name="MainFrame" Width="Auto" Height="Auto" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
